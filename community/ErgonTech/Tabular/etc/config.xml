<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <ErgonTech_Tabular>
            <version>0.1.0</version>
        </ErgonTech_Tabular>
    </modules>

    <global>
        <models>
            <ergontech_tabular>
                <class>ErgonTech_Tabular_Model</class>
                <resourceModel>ergontech_tabular_resource</resourceModel>
            </ergontech_tabular>
            <ergontech_tabular_resource>
                <class>ErgonTech_Tabular_Model_Resource</class>
                <entities>
                    <import_profile>
                        <table>tabular_import_profile</table>
                    </import_profile>
                    <import_profile_store>
                        <table>tabular_import_profile_store</table>
                    </import_profile_store>
                </entities>
            </ergontech_tabular_resource>
        </models>
        <helpers>
            <ergontech_tabular>
                <class>ErgonTech_Tabular_Helper</class>
            </ergontech_tabular>
        </helpers>
        <resources>
            <ergontech_tabular_setup>
                <setup>
                    <module>ErgonTech_Tabular</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </ergontech_tabular_setup>
        </resources>
        <blocks>
            <ergontech_tabular>
                <class>ErgonTech_Tabular_Block</class>
            </ergontech_tabular>
        </blocks>

        <ergontech>
            <tabular>
                <import>
                    <profile>
                        <type>
                            <product>ErgonTech_Tabular_Model_Import_Profile_Type_Product</product>
                        </type>
                    </profile>
                </import>
            </tabular>
        </ergontech>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ErgonTech_Tabular before="Mage_Adminhtml">ErgonTech_Tabular_Adminhtml</ErgonTech_Tabular>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <ergontech_tabular>
                    <file>ergontech/tabular.xml</file>
                </ergontech_tabular>
            </updates>
        </layout>
    </adminhtml>

    <default>
        <tabular>
            <general>
                <enabled>1</enabled>
            </general>
        </tabular>
    </default>

</config>
