<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <ErgonTech_Tabular>
            <version>0.1.0</version>
        </ErgonTech_Tabular>
    </modules>

    <global>
        <models>
            <ergontech_tabular>
                <class>ErgonTech_Tabular_Model</class>
                <resourceModel>ergontech_tabular_resource</resourceModel>
            </ergontech_tabular>
            <ergontech_tabular_resource>
                <class>ErgonTech_Tabular_Model_Resource</class>
                <entities>
                    <profile>
                        <table>tabular_profile</table>
                    </profile>
                    <profile_store>
                        <table>tabular_profile_store</table>
                    </profile_store>
                </entities>
            </ergontech_tabular_resource>
        </models>
        <helpers>
            <ergontech_tabular>
                <class>ErgonTech_Tabular_Helper</class>
            </ergontech_tabular>
        </helpers>
        <resources>
            <ergontech_tabular_setup>
                <setup>
                    <module>ErgonTech_Tabular</module>
                    <class>Mage_Core_Model_Resource_Setup</class>
                </setup>
            </ergontech_tabular_setup>
        </resources>
        <blocks>
            <ergontech_tabular>
                <class>ErgonTech_Tabular_Block</class>
            </ergontech_tabular>
        </blocks>

        <ergontech>
            <tabular>
                <profile>
                    <type>
                        <product_import>
                            <class>ErgonTech_Tabular_Model_Profile_Type_Product_Import</class>
                            <extra>
                                <spreadsheet_id>
                                    <input>text</input>
                                    <label>Spreadsheet ID</label>
                                    <comment><![CDATA[<a target="_blank" href="http://webapps.stackexchange.com/questions/74205/what-is-the-key-in-my-google-spreadsheets-url">Info</a> on finding your spreadsheet key.]]></comment>
                                </spreadsheet_id>
                                <header_named_range translate="label">
                                    <input>text</input>
                                    <label>Header Named Range</label>
                                </header_named_range>
                                <data_named_range>
                                    <input>text</input>
                                    <label>Data Named Range</label>
                                </data_named_range>
                                <header_transform_callback>
                                    <input>select</input>
                                    <label>Header Column Transform Options</label>
                                    <options>
                                        <spaces_to_underscores_and_lowercase>
                                            <label>Spaces to underscores and Lowercase</label>
                                            <callback><![CDATA[ErgonTech_Tabular_Helper_HeaderTransforms::spacesToUnderscoresAndLowercase]]></callback>
                                        </spaces_to_underscores_and_lowercase>
                                    </options>
                                </header_transform_callback>
                            </extra>
                        </product_import>
                        <category_import>
                            <class>ErgonTech_Tabular_Model_Profile_Type_Category_Import</class>
                            <extra>
                                <spreadsheet_id>
                                    <input>text</input>
                                    <label>Spreadsheet ID</label>
                                    <comment><![CDATA[<a target="_blank" href="http://webapps.stackexchange.com/questions/74205/what-is-the-key-in-my-google-spreadsheets-url">Info</a> on finding your spreadsheet key.]]></comment>
                                </spreadsheet_id>
                                <header_named_range translate="label">
                                    <input>text</input>
                                    <label>Header Named Range</label>
                                </header_named_range>
                                <data_named_range>
                                    <input>text</input>
                                    <label>Data Named Range</label>
                                </data_named_range>
                                <header_transform_callback>
                                    <input>select</input>
                                    <label>Header Column Transform Options</label>
                                    <options>
                                        <spaces_to_underscores_and_lowercase>
                                            <label>Spaces to underscores and Lowercase</label>
                                            <callback><![CDATA[ErgonTech_Tabular_Helper_HeaderTransforms::spacesToUnderscoresAndLowercase]]></callback>
                                        </spaces_to_underscores_and_lowercase>
                                        <category_type_matcher>
                                            <label>Category mapper</label>
                                            <callback><![CDATA[ErgonTech_Tabular_Helper_HeaderTransforms::categoryHeaderMapping]]></callback>
                                        </category_type_matcher>
                                    </options>
                                </header_transform_callback>
                            </extra>
                        </category_import>
                    </type>
                </profile>
            </tabular>
        </ergontech>
    </global>

    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <ErgonTech_Tabular before="Mage_Adminhtml">ErgonTech_Tabular_Adminhtml</ErgonTech_Tabular>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <ergontech_tabular>
                    <file>ergontech/tabular.xml</file>
                </ergontech_tabular>
            </updates>
        </layout>
    </adminhtml>

    <default>
        <tabular>
            <google_api>
                <api_key backend_model="adminhtml/system_config_backend_encrypted"/>
            </google_api>
            <general>
                <enabled>1</enabled>
            </general>
        </tabular>
    </default>

</config>
